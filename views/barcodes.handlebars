<h4>Add a Barcode</h4>
* All fields are optional
<div class="row">
    <div class="input-field col s12 m4">
        <i class="material-icons prefix">mode_edit</i>
        <input id="barcode-title" type="text">
        <label for="barcode-title">Title</label>
    </div>
    <div class="input-field col s12 m6">
        <i class="material-icons prefix">mode_edit</i>
        <textarea id="barcode-description" class="materialize-textarea"></textarea>
        <label for="barcode-description">Description</label>
    </div>
</div>
<div class="row">
    <div class="input-field col s12 m6">
        <i class="material-icons prefix">photo</i>
        <input id="photo-url" type="text">
        <label for="photo-url">Photo URL</label>
    </div>
</div>

<button id="add-barcode" class="btn waves-effect waves-light blue lighten-1">Add
    <i class="material-icons right">add_box</i>
</button>
<button id="update-barcode" class="btn waves-effect waves-light">UPDATE
    <i class="material-icons right">sync</i>
</button>
<button id="cancel" class="btn waves-effect waves-light red">CANCEL
    <i class="material-icons right">cancel</i>
</button>

<br><br>
<h4>Existing Barcodes</h4>
<strong>*Click a barcode to view and edit associated items</strong><br><br>

<table class="striped table-responsive">
    <thead>
        <tr>
            <th>Barcode</th>
            <th>Title</th>
            <th>Description</th>
            <th>Photo URL</th>
            <th></th><!-- Edit Button -->
            <th></th><!-- Delete Button -->
        </tr>
    </thead>

    <tbody>
        {{#each barcodes}}
        <tr>
            <td>{{#if barcode_num}}<a href="/barcode/?barcode={{barcode_num}}"><img class="barcode"
                        data-id="{{barcode_num}}" width=150 /></a>{{/if}}</td>
            <td>{{title}}</td>
            <td>{{description}}</td>
            <td>{{#if photo_url}}<a href="{{photo_url}}" target="_blank">View Photo</a>{{/if}}</td>
            <td><button class="edit-button btn waves-effect waves-light" data-id="{{id}}">Edit</button></td>
            <td><button class="delete-button btn waves-effect waves-light modal-trigger red" data-target="modalDelete"
                    data-id="{{id}}">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>



<!-- Modal Structure -->
<div id="modalDelete" class="modal modal-fixed-footer">
    <div class="modal-content">
        <h4 style="color: red;">Delete?</h4>
        <label style="color: black;">Are you sure you want to delete this barcode?</label>
    </div>
    <div class="modal-footer">
        <label class="modal-close waves-effect waves-red btn-flat">No</label>
        <label id="delete-confirm" class="modal-close waves-effect waves-green btn-flat">Yes</label>
    </div>
</div>

<style>
    #add-barcode,
    #update-barcode {
        margin-left: 55px;
    }

    .barcode:hover {
        opacity: 0.5;
    }

    #update-barcode,
    #cancel {
        display: none;
    }

    #modalDelete {
        width: 300px;
        height: 200px;
    }

    @media (max-width: 670px) {
        .table-responsive {
        display: block;
        width: 100%;
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
        -ms-overflow-style: -ms-autohiding-scrollbar;
    }
  }

</style>

<script src="/javascript/JsBarcode.all.min.js"></script>
<script src="/javascript/barcodes.js"></script>